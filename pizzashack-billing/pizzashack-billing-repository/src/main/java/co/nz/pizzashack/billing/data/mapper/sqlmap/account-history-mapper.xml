<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="co.nz.pizzashack.billing.data.mapper.AccountHistoryMapper">

	<resultMap id="accountHistoryResultMap" type="accountHistory">
		<id property="accountHistoryId" column="account_hist_id" />
		<result property="accountTransNo" column="account_trans_no" />
		<result property="transAmount" column="trans_amount" />
		<result property="createTime" column="create_time" />
		<result property="transType" column="trans_type" />

		<association property="account" javaType="account">
			<id property="accountId" column="account_id" />
			<result property="accountNo" column="account_no" />
			<result property="securityNo" column="security_no"/>
			<result property="balance" column="balance" />
			<result property="accountType" column="account_type" />
			<result property="createTime" column="create_time" />
			<result property="expireDate" column="expire_date" />
		</association>
	</resultMap>

	<insert id="saveAccountHistory" parameterType="accountHistory">
		<selectKey keyProperty="accountHistoryId" resultType="long" order="BEFORE">
			select
			account_hist_seq.nextval from dual
		</selectKey>
		insert into
		t_account_history(account_hist_id,account_trans_no,trans_amount,create_time,trans_type,account_id)
		values
		(#{accountHistoryId},
		#{accountTransNo},#{transAmount},#{createTime},#{transType},#{account.accountId})
	</insert>

	<update id="updateAccountHistory" parameterType="accountHistory">
		update t_account_history
		<set>
			<if test="transAmount != null">trans_amount=#{transAmount},</if>
			<if test="transType != null">trans_type=#{transType},</if>
		</set>
		where account_hist_id = #{accountHistoryId}
	</update>

	<delete id="deleteAccountHistory" parameterType="long">
		delete from t_account_history
		where
		account_hist_id = #{accountHistoryId}
	</delete>


	<select id="getAccountHistories" parameterType="hashmap" resultMap="accountHistoryResultMap">
		SELECT * FROM t_account_history
		<where>
			<include refid="searchConditions" />
		</where>
	</select>


	<sql id="searchConditions">
		<if test="account_hist_id != null and account_hist_id != '' ">
			account_hist_id = #{accountHistoryId}
		</if>

		<if test="accountTransNo != null and accountTransNo != '' ">
			AND account_trans_no = #{accountTransNo}
		</if>

		<if test="transType != null">
			AND trans_type = #{transType}
		</if>
	</sql>


</mapper>
